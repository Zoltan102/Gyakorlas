<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:inputType="text"
        android:hint="Írj be valami szöveget"
        android:textAlignment="center"
        android:textSize="25sp" />

    <Button
        android:id="@+id/uppercaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/input"
        android:layout_centerInParent="true"
        android:text="NAGY BETŰS SZÖVEG" />

    <Button
        android:id="@+id/lowercaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/uppercaseButton"
        android:layout_centerInParent="true"
        android:text="KIS BETŰS SZÖVEG" />

    <Button
        android:id="@+id/randomColour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lowercaseButton"
        android:layout_centerInParent="true"
        android:text="VÉLETLEN SZÍN GENERÁLÁS" />

    <TextView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/randomColour"
        android:textAlignment="center"
        android:textSize="25sp" />

</RelativeLayout>